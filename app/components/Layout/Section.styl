.section
  padding-left: x(40)
  padding-right: x(40)
  min-width: x(1200)
  background-position: center center
  background-size: cover
  background-color: $white

  video
    width: 100%
    height: auto

.driveInOverlay
  z-index: 10

  &:after
    display: block
    position: absolute
    content: ""
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: black
    opacity: 0.1
    z-index: 20

.paddedTop
  padding-top: x(30)

.paddedBottom
  padding-bottom: x(30)

.marginTop
  margin-top: x(30)

.marginBottom
  margin-bottom: x(30)

.paddedVerticalBig
  padding-top: x(150)
  padding-bottom: x(100)

.white
  background-color: $white
  .header:after
    border-bottom: 1px solid #979797

.transparent
  background-color: transparent

.halfBeige
  background: linear-gradient(90deg, #fff 50%, #FFF8EA 50%)

.beige, .examples
  background-color: #FFF8EA

.gray-beige, .stories
  background-color: #F2EDE2

.gray, .advices
  background-color: #E7E7E7

.blue, .task
  background-color: $blue
  color: $white

  .header:after
    border-bottom: 1px solid $white

  .hintIcon
    display: none

.green, .special
  background-color: #8FD3CC
  color: $blue

  .header:after
    border-bottom: 1px solid $blue

  // sooooo hackish :(
  svg
    path, circle
      stroke: $blue
    rect
      fill: $blue

.red
  background-color: $red
  color: $white


.lightgray
  background-color: #F5F5F5

.darkgray
  background-color: #1E1E1E
  color: white


.header
  position: relative
  margin: 0 auto
  width: column(12)
  padding: x(16) column(1, true)
  margin-bottom: x(30)

  &:after
    content: ''
    display: flex
    position: absolute
    width: column(10)
    border-bottom: 1px solid #979797
    left: column(1, true)
    bottom: 0

.headerInner
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center

.left
  justify-content: space-between

.center
  justify-content: center

.title
  text-transform: uppercase
  height: x(26)
  line-height: x(26)

.hintIcon
  width: x(26)
  height: x(26)
  line-height: x(26)

.hint
  display: flex
  flex-direction: row
  justify-content: flex-end
  align-items: center

.hintIcon
  width: x(26)
  height: x(26)
  line-height: x(26)
  margin-right: x(16)

.main
  display: block
  overflow: visible
  margin: 0 auto
  width: column(12)
  padding: 0 column(1, true)
  position: relative
