@require './normalize'
@require './reset'

@font-face
  font-family "futura-book"
  font-weight normal
  font-style normal
  src url('./fonts/futura-book/FTN45__W.woff') format('woff')

@font-face
  font-family "futura-demi"
  font-weight normal
  font-style normal
  src url('./fonts/futura-demi/FTN65__W.woff') format('woff')

@font-face
  font-family "minion-regular"
  font-weight normal
  font-style normal
  src url('./fonts/minion_regular/MinionProRegular.woff') format('woff')

@font-face
  font-family "minion-semibold"
  font-weight normal
  font-style normal
  src url('./fonts/minion_semibold/MinionPro-Semibold.woff') format('woff')


*, *:before, *:after
  box-sizing: border-box
  font-weight: normal
  font-style: normal
  font-family: $body-font


@media all
  /* sets the base font size for all user agents that support media queries */
  html
    font-size: $grid.block


html
  font-size: $grid.block

  +media('wide_desk')
    font-size: $grid.block * 1.3



body
  color: $text-color
  font-size: font_size(20)
  line-height: font_size(26)

h1, h2, h3, h4, h5, h6
  font-family: $header-font
  > span
    font-family: $header-font

h1, h1 > span, .h1Like
  font-size: font_size(80)
  line-height: font_size(80)


h2, h2 > span, .h2Like
  font-size: font_size(60)
  line-height: font_size(60)


h3, h3 > span, .h3Like
  font-size: font_size(46)
  line-height: font_size(46)


h4, h4, .h4Like
  font-size: font_size(24)
  line-height: font_size(24)

h5, h5 > span, .h5Like
  font-size: font_size(20)
  line-height: font_size(26)
  font-family: $body-font


h6, h6 > span, small, .small, .h6Like
  font-size: font_size(16)
  line-height: font_size(20)
  font-family: $body-font

  b
    font-family: $header-font

a
  font-family: $header-font
  color: #4A4A4A

  &:hover
    color: $blue

  &:active
    color: darken($blue, 5%)

button, input
  outline: none
  box-shadow: none
hr
  background-color: $accent
  border-width: 0
  height: 1px
  opacity: .5

apply_media_cache()